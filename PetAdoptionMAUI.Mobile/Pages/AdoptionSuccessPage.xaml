<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PetAdoptionMAUI.Mobile.Pages.AdoptionSuccessPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="25"
        VerticalOptions="Center">
        <Image x:Name="image"
               Scale="0.1"
            HeightRequest="250"
            Source="undraw_confirmed"
            WidthRequest="250" />
        <Label
            FontAttributes="Bold"
            FontSize="30"
            Text="Adoption Successful"
            TextColor="{StaticResource Primary}" />
        <Button Style="{StaticResource btnPrimary}" Text="Explore more pets"
                Clicked="Button_Clicked"/>
    </VerticalStackLayout>

</ContentPage>